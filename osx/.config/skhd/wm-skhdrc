    $HOME/.local/bin/yabai-space-util.py\
    --action send 4
fn + cmd - 5 : /Users/flap/miniconda3/bin/python\
    $HOME/.local/bin/yabai-space-util.py\
    --action send 5
fn + cmd - 6 : /Users/flap/miniconda3/bin/python\
    $HOME/.local/bin/yabai-space-util.py\
    --action send 6
